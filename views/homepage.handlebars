<div class="container">
    <div class="row">
        <div class="col-8 offset-md-2">
{{#each posts as |post|}}

<div class="card">
  <div class="card-header">
   <a href="/post/{{post.id}}">{{post.title}}</a> by {{user.username}} on {{post.date_created}}
  </div>
  <div class="card-body">
    <p class="card-text">{{post.content}}</p>
  </div>
</div>
{{/each}}
</div>
</div>
</div> 